@page
@model FUNewsManagementSystem.Pages_SystemAccounts.CreateModel
@inject FUNewsManagementSystem.Service.RoleService RoleService

@{
    ViewData["Title"] = "Create System Account";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary">Create New System Account</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountName" class="form-label"></label>
                    <input asp-for="SystemAccount.AccountName" class="form-control" placeholder="Enter name" autocomplete="off" />
                    <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountEmail" class="form-label"></label>
                    <input asp-for="SystemAccount.AccountEmail" type="email" class="form-control" placeholder="Enter email" autocomplete="off" />
                    <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountRole" class="form-label"></label>
                    <select asp-for="SystemAccount.AccountRole" class="form-select">
                        @foreach (var role in RoleService.GetRoles())
                        {
                            <option value="@role.Value">@role.Text</option>
                        }
                    </select>
                    <span asp-validation-for="SystemAccount.AccountRole" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SystemAccount.AccountPassword" class="form-label"></label>
                    <input asp-for="SystemAccount.AccountPassword" type="password" class="form-control" placeholder="Enter password" autocomplete="new-password" />
                    <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
                </div>

                <!-- Thêm dropdown chọn trạng thái IsActive -->
                <div class="mb-3">
                    <label asp-for="SystemAccount.IsActive" class="form-label">Status</label>
                    <select asp-for="SystemAccount.IsActive" class="form-select">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="SystemAccount.IsActive" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Create</button>
                    <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
