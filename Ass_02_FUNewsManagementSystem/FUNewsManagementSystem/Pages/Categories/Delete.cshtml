@page
@model FUNewsManagementSystem.Pages_Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Category</h1>
    <hr />

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this category?</h4>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-primary">@Model.Category.CategoryName</h4>
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Category Description:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.CategoryDesciption)</dd>

                <dt class="col-sm-4 fw-bold">Status:</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Category.IsActive == true ? "bg-success" : "bg-danger")">
                        @(Model.Category.IsActive == true ? "Active" : "Inactive")
                    </span>
                </dd>

                <dt class="col-sm-4 fw-bold">Parent Category:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.ParentCategory.CategoryName)</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Category.CategoryId" />

        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>

        <a asp-page="./Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>
