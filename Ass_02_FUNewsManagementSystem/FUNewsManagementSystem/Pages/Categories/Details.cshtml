@page
@model FUNewsManagementSystem.Pages_Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDesciption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDesciption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.IsActive)
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Category.IsActive == true ? "bg-success" : "bg-danger")">
                @(Model.Category.IsActive == true ? "Active" : "Inactive")
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.ParentCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.ParentCategory.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryId" class="btn btn-warning">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
